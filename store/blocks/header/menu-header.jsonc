    "flex-layout.row#MenuheaderWrapper": {
        "children": [
            "vtex.menu@2.x:menu#departamentos"
        ]
    },
    "flex-layout.row#TopMenuBar":{
        "props": {
        "blockClass":"BarraMenuSuperior"
