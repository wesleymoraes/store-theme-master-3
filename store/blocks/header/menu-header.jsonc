{
    "flex-layout.row#headerMenu": {
        "props": {
            "preventHorizontalStretch": true,
            "preventVerticalStretch": true,
            "blockClass": "headerMenu",
            "margin": 0,
            "padding": 0
        },
        "children": [
            "flex-layout.row#MenuheaderWrapper", "flex-layout.row#TopMenuBar"
        ]
